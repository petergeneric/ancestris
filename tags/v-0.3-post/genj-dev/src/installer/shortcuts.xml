<shortcuts>
  <programGroup defaultName="GenealogyJ" location="applications"/>
  
  <shortcut name="Genealogy J" target="$JAVA_HOME\bin\javaw.exe" commandLine="-Xmx512m -Xms32m -jar run.jar" workingDirectory="$INSTALL_PATH"
    description="This starts the GenealogyJ Application" iconFile="$INSTALL_PATH\genj.ico" iconIndex="0"
    initialState="normal" programGroup="yes" desktop="yes" applications="no" startMenu="no" startup="no" type="Application">
   <createForPack name="Application"/>
  </shortcut> 
  
  <shortcut name="GenJ Homepage" target="http://genj.sourceforge.net" url="http://genj.sourceforge.net" type="Link"
    description="GenJ on the Internet" 
    initialState="normal" programGroup="yes" desktop="no" applications="no" startMenu="no" startup="no">
   <createForPack name="Application"/>
  </shortcut> 
  
  <shortcut name="Uninstall GenJ" target="$JAVA_HOME\bin\javaw.exe" commandLine="-jar uninstaller.jar" workingDirectory="$INSTALL_PATH\Uninstaller"
    description="This removes GenealogyJ from your computer" 
    initialState="normal" programGroup="yes" desktop="no" applications="no" startMenu="no" startup="no" type="Application">
   <createForPack name="Application"/>
  </shortcut> 
  
</shortcuts>
