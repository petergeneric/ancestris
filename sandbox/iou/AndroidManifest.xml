<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.nmeier.iou"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-permission android:name="android.permission.READ_CONTACTS"/> 
    <application android:label="@string/iou" android:icon="@drawable/icon">
        <activity android:name=".Main"
                  android:label="@string/iou">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Borrow"
                  android:label="@string/Borrow">
            <intent-filter>
                <action android:name="com.nmeier.iou.BORROW" />
            </intent-filter>
        </activity>
        <activity android:name=".Lend"
                  android:label="@string/Lend">
            <intent-filter>
                <action android:name="com.nmeier.iou.LEND" />
            </intent-filter>
        </activity>
        <activity android:name=".Repay"
                  android:label="@string/Repay">
            <intent-filter>
                <action android:name="com.nmeier.iou.REPAY" />
            </intent-filter>
        </activity>
    </application>
    <uses-sdk android:minSdkVersion="3" />
</manifest> 